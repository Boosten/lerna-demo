{
  "packages": ["packages/*", "sandbox"],
  "version": "0.0.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): %s"
    },
    "version": {
      "push": false,
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore(release): %s"
    }
  }
}
