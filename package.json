{
  "name": "root",
  "private": true,
  "author": {
    "name": "Kevin Boosten",
    "email": "kboosten@ilionx.com",
    "url": "https://www.kevinboosten.dev/"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "test": "lerna run test",
    "clean": "lerna clean",
    "postinstall": "npm run bootstrap",
    "ci:publish": "lerna publish from-package -y --no-verify-access",
    "sandbox:clean": "git checkout HEAD -- sandbox && git clean -f -d sandbox",
    "sandbox:run:app-center-build-config": "cd sandbox && npx ng add @ilionx/app-center-build-config com.ilionx.dummy"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-lerna-scopes": "^12.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "prettier": "2.2.1"
  },
  "bugs": {
    "url": "https://github.com/ilionx/angular-schematics/issues"
  },
  "homepage": "https://github.com/ilionx/angular-schematics",
  "repository": "https://github.com/ilionx/angular-schematics.git",
  "keywords": [
    "angular",
    "schematics",
    "ionic",
    "app center"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-lerna-scopes"
    ]
  }
}
